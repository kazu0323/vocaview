
<%= render "shared/header" %>

<div class="sign_in-content">
  <div class="sign_in-top">
    <h3 class="sign_in-title">会員登録</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "sign_in-form" }) do |f| %>
      <div class="sign_in-form-item">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "input-email", placeholder:'email' %>
      </div>
      <div class="sign_in-form-item">
        <%= f.password_field :password, autocomplete: "new-password", :class => "input-password", placeholder:'Password(半角英数字)' %>
      </div>
      <div class="sign_in-form-item">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "input-password_conf", placeholder:'Passwordを再入力' %>
      </div>
      <div class="sign_in-form-item">
        <%= f.submit "会員登録", :class => "input-submit" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>