<%# CSS・・・assets/stylesheets/shared/header.css %>
<header>
  <div class = "high_header">
  <% if user_signed_in? %>
   <ul class="login_list">
     <li><%= link_to current_user.nickname, user_path(current_user.id), class: "login_item"  %></li>
     <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "login_item" %></li>
   </ul>
  <% else %>
   <ul class="login_list">
     <li><%= link_to "会員登録",  new_user_registration_path, class:"login_item" %></li>
     <li><%= link_to "ログイン",  new_user_session_path, class:"login_item" %></li>
   </ul>
  <% end %>
  </div>
</header>
<div class="search">
  <%= link_to (image_tag 'icon.png',class:"icon_img"), root_path, class:"icon" ,size:"320x240" %>
  <%= search_form_for @q, url: reviews_search_path do |f| %>
    <%= f.search_field :song_name_or_song_composer_cont, class: "search_box", placeholder: "キーワードを入力(例: 曲名 )" %>
    <%= f.submit "検索", class: "btn btn-default" %>
  <% end %>
</div>