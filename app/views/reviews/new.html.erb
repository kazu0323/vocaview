
<%= render "shared/header" %>

<div class = "content-top">
  <div class = "form-area">
    <%= form_with model: [@song, @review], local: true, class: "review-form"  do |f| %>
      <div class="content-title">
        <%= @song.song_name %><%= "へのレビュー" %>
      </div>
      <div class = "input-area">
          <div class="star-area" id="star">
            <%= f.label :star,'評価 ', class:'col-md-3 col-form-label' %>
            <%= f.hidden_field :star, id: :review_star %>
          </div>

          <!-- 評価javascript -->
         <script>
         $('#star').raty({
           size     : 50,
           starOff:  '<%= asset_path('star-off.png') %>',
           starOn : '<%= asset_path('star-on.png') %>',
       
           scoreName: 'review[rate]',
           half: false,
         });
         </script> 

        <div class="review-title">
          <%= f.text_field :review_title, class: "input-title", placeholder: "タイトル"  %>
        </div>
        <div class="review-area">
          <%= f.text_area :review_text, class: "input-review", size: "40x10" %>
        </div>
        <div class="submit-form">
          <%= f.submit "投稿する", class: "form-sub" %>
        </div>
      </div>
    <% end %>
  </div>
</div>